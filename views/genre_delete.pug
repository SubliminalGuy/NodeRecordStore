extends layout

block content
    h2 #{title}: #{genre.name}
    
    if genre_records.length

        p #[strong Delete the following Records before you try to delete the Genre.]

        div(style='margin-left:20px;margin-top:20px')

            h4 Records

            dl
            each record in genre_records
                dt
                    a(href=record.url) #{record.name}
                if record.description
                dd #{record.description}
    else
        p Do you really want to delete this Genre?

        form(method='POST' action='')
            div.form-group
                input#genreid.form-control(type="hidden", name='genreid', required=true, value=genre._id)
            
            button.btn(type='submit') Delete